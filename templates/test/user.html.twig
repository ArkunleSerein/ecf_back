{% extends 'base.html.twig' %}

{% block title %} User {% endblock %}

{% block body %} 
    
    
    
    <h3> Liste des Utilisateurs trié par ordre alphabétique </h3>

{% for user in users %}

    <p>{{ user.email }} (id {{user.id}})</p>

{% endfor %}

    <h3> Utilisateur 1</h3>
    <p>{{ user1.email }} (id {{user1.id}})</p>

    <h3> Utilisateur dont l'email est foo.foo@example.com </h3>
    <p>{{ userMail.email }} (id {{userMail.id}})</p>

    <h3> les Utilisateurs dont le rôle est ROLE_USER </h3>
    
{% for user in userRole %}

    {% for role in user.roles %}

    <p>{{ user.email }} (id {{user.id}}) {{ role }}</p>

{% endfor %}
{% endfor %}

    <h3> la liste des utilisateurs inactifs </h3>

{% for user in userInactive %}

    <p>{{ user.email }} (id {{user.id}}) : {{ user.enabled ? 'Actif' : 'Inactif' }}</p>

{% endfor %}

{% endblock %}